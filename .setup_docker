#!/bin/bash

# setup thefuck
export PATH="$PATH:/root/.local/bin"

# setup path for robot framework
export PATH="$HOME/.local/bin/:$PATH"

export PATH="~/bin:$PATH"

# cargo install
export PATH="$HOME/.cargo/bin:$PATH"

#ros2 Domain ID
export ROS_DOMAIN_ID=69

# setup colors
# Add a whale icon to indicate we are in a docker container
if  [[ ! $(cat /proc/1/sched | head -n 1 | grep systemd) ]] ; then 
        PS1='üê≥ ${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]$ '
fi

# zoxide, upgraded cd
eval "$(zoxide init bash)"
# thefuck
eval $(thefuck --alias FUCK)
# # starship prompt
eval "$(starship init bash)"

# sudo ln -s ~/.config/helix /root/.config/helix

# ALIASES
## ROS2
alias name=valueas cb='colcon build'
alias cdnav='cd /workspace/robotique/ros2/Navigation-3D-Stack/'
alias srcsetup='source install/setup.bash'
## LSD
alias ls='lsd'
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'
