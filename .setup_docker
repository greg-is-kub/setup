#!/bin/bash

# setup thefuck
export PATH="$PATH:/root/.local/bin"

# setup path for robot framework
export PATH="$HOME/.local/bin/:$PATH"
export PATH="~/bin:$PATH"

# rust & cargo path
source "$HOME/.cargo/env"
export PATH="$HOME/.cargo/bin:$PATH"

#ros2 Domain ID
export ROS_DOMAIN_ID=69

# allow git in docker 
eval $(ssh-agent)
ssh-add ~/.ssh/gitlab-ssh-cnes-fr

# zoxide, upgraded cd
eval "$(zoxide init bash)"
# thefuck
eval $(thefuck --alias FUCK)

# starship prompt
eval "$(starship init bash)"

# atuin setup
[[ -f ~/.bash-preexec.sh ]] && source ~/.bash-preexec.sh
eval "$(atuin init bash)"

# ALIASES
## ROS2
alias cb='colcon build --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=1'
alias cdnav='cd /workspace/robotique/ros2/Navigation-3D-Stack/'
alias srcsetup='source install/setup.bash'

## LSD
alias ls='lsd'
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'
