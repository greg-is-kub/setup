[core]
    pager = delta
    editor = "sh -c $HOME/.cargo/bin/hx" # using sh because gitui doesn't understands the $HOME variable otherwise
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
    line-numbers = true
[diff]
    colorMoved = default
[merge]
    conflictStyle = zdiff3
[alias]
    branch-delete-merged = "!git branch --merged | grep -Ev '(^\\*|^\\+|master|main|dev)' | xargs --no-run-if-empty git branch -d"
    undo = "reset --soft HEAD^"
